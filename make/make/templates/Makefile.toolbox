{% for job in jobs %}
#----------------------------------------------------------
# Target "{{job.name}}" 
#----------------------------------------------------------
{{job.name}}: {{ job.dependencies|join(" ") }}
	{% for action in job.actions %}
	{{action}}	
	{% endfor %}
.PHONY: {{job.name}}
#----------------------------------------------------------

{% endfor %}
#----------------------------------------------------------
# Target "list" - lists all found jobs
#----------------------------------------------------------
list:
	@echo "#--------------------------------------------------------------------"
	@echo "# Toolbox generated make targets"
	@echo "#--------------------------------------------------------------------"
	{% for job in jobs %}
	@echo "{{job.name}}{{job.spacing}}{{job.description}}"
	{% endfor %}
	@echo "#--------------------------------------------------------------------"
.PHONY: list 
#----------------------------------------------------------
